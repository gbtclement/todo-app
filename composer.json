{
    "name": "utilisateur/todo-app",
    "description": "Simple Todo App pour démonstration CI/CD",
    "type": "project",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.2"
    },
    "autoload": {
        "psr-4": {
            "Utilisateur\\TodoApp\\": "src/"
        },
        "classmap": [
            "TodoApp.php"
        ]
    },
    "authors": [
        {
            "name": "Clément",
            "email": "clementgaubert44@gmail.com"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-ci": "phpunit --log-junit tests/results/junit.xml --testdox"
    }
}